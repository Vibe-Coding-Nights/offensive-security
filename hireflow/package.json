{
  "name": "hireflow",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "vite dev",
    "build": "vite build",
    "preview": "vite preview",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "lint": "eslint .",
    "format": "prettier --write .",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:studio": "prisma studio",
    "db:seed": "tsx prisma/seed.ts",
    "db:reset": "prisma db push --force-reset && tsx prisma/seed.ts",
    "setup": "npm install && docker-compose up -d && sleep 3 && npm run db:push && npm run db:seed && echo '\nâœ… Setup complete! Run: npm run dev'",
    "workshop:setup": "npm install && npm run db:push && npm run db:seed"
  },
  "devDependencies": {
    "@sveltejs/adapter-auto": "^3.0.0",
