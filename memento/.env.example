# ============================================================================
# MEMENTO WORKSHOP - ENVIRONMENT CONFIGURATION
# ============================================================================
# Copy this file to .env and fill in your API keys to get started!
#
# Quick setup: Most workshop participants can use Gemini (free tier available)
# For production: Use Claude for better AI responses
# ============================================================================

# ----------------------------------------------------------------------------
# DATABASE (Required)
# ----------------------------------------------------------------------------
# PostgreSQL connection string - managed by Docker Compose
# Run: docker-compose up -d
DATABASE_URL="postgresql://memento:memento_dev@localhost:5433/memento?schema=public"

# ----------------------------------------------------------------------------
# AUTHENTICATION (Required)
# ----------------------------------------------------------------------------
# Secret key for session encryption
# Generate with: openssl rand -base64 32
# For workshop: Use any random string (change for production!)
AUTH_SECRET="memento-workshop-secret-change-in-production"

# ----------------------------------------------------------------------------
# AI SERVICES (At least one required)
# ----------------------------------------------------------------------------
# Choose your AI provider: "claude" or "gemini"
# Workshop recommendation: Use "gemini" (has free tier)
AI_PROVIDER="gemini"

# Anthropic Claude API Key (Required if AI_PROVIDER=claude)
# Sign up: https://console.anthropic.com/
# Get API key: https://console.anthropic.com/settings/keys
# Workshop: Use Gemini instead if you don't have Claude access
ANTHROPIC_API_KEY=""

# Google Gemini API Key (Required if AI_PROVIDER=gemini)
# Get API key: https://aistudio.google.com/apikey
# Free tier: 60 requests/minute - perfect for workshop!
GEMINI_API_KEY=""

# OpenAI API Key (Optional - for embeddings)
# Sign up: https://platform.openai.com/signup
# Get API key: https://platform.openai.com/api-keys
# Note: App uses mock embeddings in development if not provided
OPENAI_API_KEY=""

# ----------------------------------------------------------------------------
# VECTOR DATABASE (Optional for workshop)
# ----------------------------------------------------------------------------
# Pinecone for storing AI memory embeddings
# Sign up: https://www.pinecone.io/
# Get API key: https://app.pinecone.io/
# Free tier: 1 index, 100K vectors - enough for workshop
# Note: App works without Pinecone in dev mode (uses in-memory fallback)
PINECONE_API_KEY=""
PINECONE_INDEX="memento-memories"

# ----------------------------------------------------------------------------
# REDIS (Managed by Docker Compose)
# ----------------------------------------------------------------------------
# Redis for caching and real-time features
# Run: docker-compose up -d
REDIS_URL="redis://localhost:6379"

# ----------------------------------------------------------------------------
# APPLICATION
# ----------------------------------------------------------------------------
# Public URL for the application (used for redirects, webhooks, etc.)
PUBLIC_APP_URL="http://localhost:5173"

# Environment (development, production)
NODE_ENV="development"
